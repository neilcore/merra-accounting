<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
	
	<!-- drop journal_number column from journal table -->
	<changeSet id="2025-create-journal-table" author="brian">
		<dropColumn
			schemaName="merra_schema"
			tableName="journal"
			columnName="journal_number"
		></dropColumn>
	</changeSet>
	
	<!-- recreate journal_number column with different data type -->
	<changeSet id="2025-create-journal_line-table" author="brian">
		<addColumn
			schemaName="merra_schema"
			tableName="journal"
		>
			<column
				name="journal_number"
				type="bigint"
				autoIncrement="true"
				startWith="1"
				incrementBy="1"
				generationType="ALWAYS"
			>
				<constraints nullable="false" unique="true" />
			</column>
		</addColumn>
	</changeSet>
</databaseChangeLog>