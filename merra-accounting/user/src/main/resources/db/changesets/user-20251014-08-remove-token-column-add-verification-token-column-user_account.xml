<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <!-- Drop tokens column -->
    <changeSet id="2025-drop-tokens-column-user_account" author="brian">
        <dropColumn 
            columnName="tokens"
            schemaName="merra_schema"
            tableName="user_account">
        </dropColumn>
    </changeSet>
    <changeSet id="2025-add-verification_token-column-user_account" author="brian">
        <addColumn tableName="user_account" schemaName="merra_schema">
            <column name="verification_token" type="text"></column>
        </addColumn>
    </changeSet>
</databaseChangeLog>